@model Nop.Admin.Models.Game.LuckyBoxModel
@{  
    //page title
    ViewBag.Title = T("Admin.Game.LuckyBox.EditLuckyBoxDetails").Text;
}
@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
        <img src="@Url.Content("~/Administration/Content/images/ico-catalog.png")" alt="" />
            @T("Admin.Game.LuckyBox.EditLuckyBoxDetails") @Html.ActionLink("(" + T("Admin.Game.LuckyBox.BackToList") + ")", "List")
        </div>
        @if (ViewBag.AllowManageGames)
        {
        <div class="options">
            <input type="submit" name="save" class="t-button" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="t-button" value="@T("Admin.Common.SaveContinue")" />
            <span id="luckybox-delete" class="t-button">@T("Admin.Common.Delete")</span>
        </div>
        }
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
@Html.DeleteConfirmation("luckybox-delete")