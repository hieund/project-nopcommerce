@model PromotionModel
@using Telerik.Web.Mvc.UI;
@{
    //page title
    ViewBag.Title = T("Admin.Catalog.Promotion.EditPromotion").Text;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "promotion-form" }))
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-catalog.png")" alt="" />
            @T("Admin.Catalog.Promotion.EditPromotion") - @Model.PromotionName @Html.ActionLink("(" + T("Admin.Catalog.Promotion.BackToList") + ")", "PromotionList")
        </div>
        <div class="options">
            <input type="submit" name="save" class="t-button" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="t-button" value="@T("Admin.Common.SaveContinue")" />
            @*<span id="promotion-delete" class="t-button">@T("Admin.Common.Delete")</span>*@
        </div>
    </div>
    @Html.Partial("_CreateOrUpdatePromotion", Model)
}
@Html.DeleteConfirmation("promotion-delete")

