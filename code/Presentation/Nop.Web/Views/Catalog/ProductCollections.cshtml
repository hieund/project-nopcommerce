@model IList<ProductOverviewModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
    <div class="collectionhot_right_sub">
        <div class="ctcollection">
            <p class="protitle1"><a href="@Url.RouteUrl("Product", new { SeName = item.SeName })">@item.Name</a></p>
            <p class="price">
                @(item.ProductPrice.Price)
                @if (!string.IsNullOrEmpty(item.ProductPrice.OldPrice))
                {
                    <span class="pricedown">@(item.ProductPrice.OldPrice)</span>
                }
            </p>
        </div>
        <div class="imgcollection">
            <a href="@Url.RouteUrl("Product", new { SeName = item.SeName })">
                <img src="@item.DefaultPictureModel.ImageUrl" alt="@item.DefaultPictureModel.AlternateText" title="@item.DefaultPictureModel.Title" align="right" />
            </a>
        </div>
    </div>
    }
}